<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: lightpink;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cmpt365_project3.AC_Controller">
   <children>
      <Label fx:id="title" layoutX="204.0" layoutY="29.0" text="Arithmetic Coding">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <TextField fx:id="userInput" layoutX="226.0" layoutY="155.0" onAction="#inputEntered" />
      <Label fx:id="instructions" layoutX="174.0" layoutY="94.0" text="Please enter a string that consists of A's and B's" />
      <Label fx:id="warningMessage" layoutX="176.0" layoutY="122.0" text="The string cannot be more than 16 letters long!" />
      <Button fx:id="enterButton" layoutX="279.0" layoutY="200.0" mnemonicParsing="false" onAction="#inputEntered" text="Enter" />
      <Label fx:id="higherBound" layoutX="245.0" layoutY="118.0" text="Final Higher Bound: " visible="false" />
      <Label fx:id="lowerBound" layoutX="247.0" layoutY="168.0" text="Final Lower Bound: " visible="false" />
      <Label fx:id="higherBoundVal" layoutX="250.0" layoutY="144.0" text="highervalue" visible="false">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <Label fx:id="lowerBoundVal" layoutX="250.0" layoutY="191.0" text="value" visible="false">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <Label fx:id="inputLabel" layoutX="283.0" layoutY="276.0" text="Input: " visible="false" />
      <Label fx:id="string" layoutX="271.0" layoutY="313.0" text="string" visible="false" />
      <Label fx:id="openLabel" layoutX="263.0" layoutY="271.0" text="Or open a file!" />
      <Button fx:id="openFileButton" layoutX="267.0" layoutY="300.0" mnemonicParsing="false" onAction="#openFileClicked" text="Open File" />
      <TextArea fx:id="results" layoutX="201.0" layoutY="113.0" prefHeight="200.0" prefWidth="200.0" visible="false" />
   </children>
</AnchorPane>
